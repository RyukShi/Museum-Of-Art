<form
    method="POST"
    action="{{ path('app_artist_delete', {'id': artist.id}) }}"
    onsubmit="return confirm('Are you sure you want to delete this Artist?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artist.id) }}" />
    <button class="btn btn-danger">Delete</button>
</form>
